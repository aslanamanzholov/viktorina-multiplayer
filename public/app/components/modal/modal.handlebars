<div class="modal" id="{{id}}">
    <div class="modal__content {{customClasses}}">
        {{#if isClosable}}
            <div class="modal__close" id="close_{{id}}">
                <i class="material-icons">close</i>
            </div>
        {{/if}}
        {{#if header}}
            <div class="modal__header">
                {{header}}
            </div>
        {{/if}}
        <div class="modal__body">
            {{{body}}}
        </div>
    </div>
</div>
